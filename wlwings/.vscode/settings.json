{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
  },
  "isort.args":["--profile", "black"],
  "black-formatter.args": [
      "--line-length=110"
  ],
  "flake8.args": [
      "--max-line-length=110",
      "--ignore=E203,E701,W503"
  ]
}
